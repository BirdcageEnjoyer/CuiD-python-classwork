import pygame
import random

# Define some colors
BLACK = 0x000000
WHITE = 0xFFFFFF




pygame.init()

# Set the width and height of the screen [width, height]
size = (700, 500)
screen = pygame.display.set_mode(size)

pygame.display.set_caption("Snow")

# Initialise flake variables here to have random initial position:
# x, y, velocity


class flake: #record for flakes
    def __init__(self):
        self.xpos = random.randint(0, 700)
        self.ypos = random.randint(-10, 500)
        self.vel = random.uniform(1, 3)
        self.size = random.randint(2, 5)

    def fall(self):
        self.ypos += self.vel
        if self.ypos > 500:
            self.ypos = random.randint(-50, -10)
            self.xpos = random.randint(0, 700)

    def draw(self, screen):
        pygame.draw.circle(screen, WHITE, (int(self.xpos), int(self.ypos)), self.size)
    #end fields
#end record

snowflakes = [None for i in range(50)]

for i in range(50):
    snowflakes[i] = flake()

print(snowflakes)
# Loop until the user clicks the close button.
done = False

# Used to manage how fast the screen updates
clock = pygame.time.Clock()

# -------- Main Program Loop -----------
while not done:
    # --- Main event loop
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            done = True

    # --- Game logic should go here



    # --- Screen-clearing code goes here
    screen.fill(BLACK)
    # Here, we clear the screen to white. Don't put other drawing commands
    # above this, or they will be erased with this command.

    # If you want a background image, replace this clear with blit'ing the
    # background image.


    # --- Drawing code should go here
    for snowflake in snowflakes:
        snowflake.fall()
        snowflake.draw(screen)

    # --- Go ahead and update the screen with what we've drawn.
    pygame.display.flip()
 
    # --- Limit to 60 frames per second
    clock.tick(60)
    
# Close the window and quit.
pygame.quit()