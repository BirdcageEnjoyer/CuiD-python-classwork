import pygame
import random

# Define some colors
BLACK = 0x000000
WHITE = 0xFFFFFF




pygame.init()

# Set the width and height of the screen [width, height]
size = (700, 500)
screen = pygame.display.set_mode(size)

pygame.display.set_caption("Snow")

# Initialise flake variables here to have random initial position:
# x, y, velocity
snofleiks = [None for i in range(0, 500)]
print(snofleiks)
vel = 2

class flake: #this is a record
    def __init__(self, xpos, ypos, velocity, size) -> None:
        self.xpos = xpos
        self.ypos = xpos
        self.vel = velocity
        self.size = size
    #end fields
#end record


# Loop until the user clicks the close button.
done = False

# Used to manage how fast the screen updates
clock = pygame.time.Clock()

# -------- Main Program Loop -----------
while not done:
    # --- Main event loop
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            done = True

    # --- Game logic should go here



    # --- Screen-clearing code goes here
    screen.fill(BLACK)
    # Here, we clear the screen to white. Don't put other drawing commands
    # above this, or they will be erased with this command.

    # If you want a background image, replace this clear with blit'ing the
    # background image.


    # --- Drawing code should go here
    for i in range(0, len(snofleiks)):
        
        myFlakes = flake(random.randint(0,700), random.randint(0, 500), random.randint(0, 10), 5)
        snofleiks[i] = myFlakes
        
        print(snofleiks)

    # --- Go ahead and update the screen with what we've drawn.
    pygame.display.flip()
 
    # --- Limit to 60 frames per second
    clock.tick(60)
    
# Close the window and quit.
pygame.quit()